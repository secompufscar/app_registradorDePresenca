<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TelaPrincipal">


    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadAnimationIV"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:src="@drawable/loading_animation"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout">

        <ImageView

            android:id="@+id/imageView"
            android:src="@mipmap/secomp2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/BotoesTP"
            android:weightSum="1"
            android:showDividers="beginning"
            android:touchscreenBlocksFocus="false"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Selecione o tipo de  atividade :"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Palestras"
                android:id="@+id/button"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/imageView"
                android:layout_alignEnd="@+id/minicursos"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Minicursos"
                android:id="@+id/minicursos"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Workshops"
                android:id="@+id/workshops"
                android:layout_below="@+id/minicursos"
                android:layout_alignEnd="@+id/button"
                android:layout_marginTop="25dp"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Mesas Redondas"
                android:id="@+id/mesasRedondas"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
